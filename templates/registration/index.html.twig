{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}{{ parent() }} | Créer un compte{% endblock %}

{% block body %}
{{ parent() }}

<h1>Créer un compte</h1>

{{ form_start(form) }}
    {{ form_row(form.firstName, {label:'Prénom'}) }}
    {{ form_row(form.lastName, {label:'Nom'}) }}
    {{ form_row(form.address, {label:'Ville'}) }}
    {{ form_row(form.phoneNumber, {label:'Numéro de téléphone'}) }}
    {{ form_row(form.email, {label:'Email'}) }}
    {{ form_row(form.password, {label:'Mot de passe'}) }}
    {{ form_row(form.age, {label: 'Age'}) }}
    <br>
    <button type="submit" class="btn btn-success">Créer</button>
{{ form_end(form) }}
{% endblock %}
